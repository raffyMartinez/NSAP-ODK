<Window x:Class="NSAP_ODK.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NSAP_ODK.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="OnWindowLoaded" ShowInTaskbar="False"
        Title="SplashWindow" Height="223.565" Width="567.064" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="NSAP-ODK Fish Landings Database" HorizontalContentAlignment="Center" x:Name="LabelTitle" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <Label Grid.Row="1" Content="Loading data..." HorizontalContentAlignment="Center" x:Name="LabelLoading"/>
        <ProgressBar Grid.Row="2" Margin="75 12" x:Name="ProgressBarRead"/>
    </Grid>
</Window>
