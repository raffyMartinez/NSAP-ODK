<Window x:Class="NSAP_ODK.Mapping.views.SelectGridFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NSAP_ODK.Mapping.views"
        mc:Ignorable="d"
        Title="Select file to use in mapping" Height="306.618" Width="343.912">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Select grid file for mapping" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" x:Name="labelTitle"/>
        <StackPanel Grid.Row="1" x:Name="panelButtons">
            <RadioButton Content="Dummy file 1" Margin="20 10 0 5"/>
            <RadioButton Content="Dummy file 2" Margin="20 0 0 5"/>
            <RadioButton Content="Dummy file 3" Margin="20 0 0 5"/>
        </StackPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Cancel" Height="25" Width="50" Margin="10 0" Click="OnButtonClick"/>
            <Button Content="Ok" Height="25" Width="50" Margin="10 0" Click="OnButtonClick"/>
        </WrapPanel>
    </Grid>
</Window>
